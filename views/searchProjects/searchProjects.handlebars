<main class="container">
    <div>
        {{#if search}}
        <h1>Buscando por: {{search}}</h1>
        {{else}}
        <h1>Todos os projetos: </h1>
        {{/if}}

        <form action="/searchProjects" method="get">
            <div class="input-group mb-3">
                <input type="text" name="search" class="form-control" placeholder="Procurar"
                    aria-label="Recipient's username" aria-describedby="button-addon2">
                <button type="submit" class="btn btn-dark text-center">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </form>
    </div>

    <ul class="d-flex flex-wrap justify-content-center p-0" >
        {{#each projects}}
        <li class="list-group-item card p-0 mt-3 m-1">
            <div
                class="card-header bg-dark text-light pb-0 d-flex justify-content-between align-items-center rounded-top ps-3 pe-3">
                <h3>
                    <input class="form-control-plaintext text-light fw-bold d-flex align-items-center" type="text"
                        value="{{this.destination}}" disabled>
                </h3>
            </div>
            <a href="/project/{{this.id}}" class="text-decoration-none text-dark">
                <div class="card-body bg-light p-3 pb-0 border rounded-bottom d-flex ">
                    <div class="w-100">
                        <div class="text-center">
                            <label for="" class="form-label">Status</label>
                            <input type="text" class="form-control m-0" value="{{this.status}}" disabled>
                        </div>
                        <div class="text-center">
                            <label for="" class="form-label">Tipo</label>
                            <input type="text" class="form-control m-0" value="{{this.exchangeType}}" disabled>
                        </div>
                        <div class="text-center">
                            <label for="" class="form-label">Criado em: </label>
                            <input type="text" class="form-control m-0" value="{{this.updatedAt}}" disabled>
                        </div>
                        <div class="text-center">
                            <label for="" class="form-label">Criado Por: </label>
                            <input type="text" class="form-control m-0" value="{{this.User.name}}" disabled>
                        </div>
                        <div class="text-end p-1">
                            <i class="bi bi-arrows-angle-expand text-dark"> Expandir</i>
                        </div>
                    </div>
                </div>
            </a>
        </li>
        {{/each}}
    </ul>
</main>