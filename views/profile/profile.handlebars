<main class="container pt-3 d-flex flex-column min-vh-100 shadow">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <a href="/project/add" class="p-2 border rounded bg-dark text-light text-decoration-none">+ Add projeto</a>
        </div>
        <div>
            <h2 class="text-center mb-3">Meus Projetos</h2>
        </div>
        <div class="text-center border rounded px-3 bg-dark">
            <div class="text-light">
                <i class="bi bi-people fs-3 text-center"> {{userProfile.name}}</i>
            </div>
        </div>
    </div>


    <section class="border-top p-3">

        <ol class="p-0" id="listaProjetos">
            {{#each userProjects}}

            <li class="list-group-item card p-0 my-3 w-100 shadow">
                <div
                    class="card-header bg-dark text-light pb-0 d-flex justify-content-between align-items-center rounded-top ps-3 pe-3">
                    <h3>
                        <input class="form-control-plaintext text-light fw-bold d-flex align-items-center" type="text"
                            value="{{this.destination}}" disabled>
                    </h3>
                    <div class="d-flex align-items-center">
                        <button type="button" class="btn btn-dark text-center">
                            <a href="/project/update/{{this.id}}" class="text-decoration-none text-center">
                                <i class="bi bi-pencil-square text-light"> Editar</i>
                            </a>
                        </button>

                        <form action="/project/remove" method="post">
                            <input type="hidden" name="id" value="{{this.id}}">
                            <button type="submit" class="btn btn-dark text-center">
                                <i class="bi bi-trash"> Deletar</i>
                            </button>
                        </form>
                    </div>
                </div>
                <div class="card-body bg-light py-0 ps-0 rounded-bottom overflow-hidden">
                    <a href="/project/{{this.id}}" class="text-decoration-none text-dark ">
                        <div class="row ">
                            <div class="col-3 projectImg border-end border-3">
                            </div>
                            <div class="col-6 p-3">
                                <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Ad quas dolores esse
                                    corporis
                                    ab
                                    tempora cum, repellat non ex ratione tenetur magnam? Nam, ducimus sint repudiandae
                                    consectetur voluptas voluptates delectus.</p>
                            </div>
                            <div class="col-3 p-3 pb-0">
                                <div class="w-100">
                                    <div class="text-center">
                                        <label for="" class="form-label">Status</label>
                                        <input type="text" class="form-control m-0" value="{{this.status}}" disabled>
                                    </div>
                                    <div class="text-center">
                                        <label for="" class="form-label">Tipo</label>
                                        <input type="text" class="form-control m-0" value="{{this.exchangeType}}"
                                            disabled>
                                    </div>
                                    <div class="text-end p-1">
                                        <i class="bi bi-arrows-angle-expand text-dark"> Expandir</i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </li>

            {{/each}}
        </ol>
    </section>
</main>