<main class="container pt-3 d-flex flex-column min-vh-100" style="background-color: white;">
    <div class="row ">
        <h2 class="text-center mb-3">Meus Projetos</h2>

        <section class="col-md-5 border-top p-3 d-flex flex-column max-height-sm">
            <div class="form-check form-switch d-flex justify-content-between align-items-center">
                <input class="form-check-input" type="checkbox" role="switch" onclick="statusInpt(event)" checked>
                <button type="button" class="btn btn-dark" onclick="criaProjeto()">+ Criar projeto</button>
            </div>

            <ol class="list-group list-group-flush" id="listaProjetos">
                <!--OS PROJETOS SERÃO ADICIONADOS AQUI-->
            </ol>
        </section>

        <section class="col-md-7 border-top p-3">
            <div class="d-flex justify-content-end">
                <button type="button" class="btn btn-dark" onclick="criaPasso()">+ Cria Passo</button>
            </div>

            <ol class="accordion accordion-flush list-group list-group-flush" id="listaPassos"
                id="accordionFlushExample">
                <!--OS PASSOS SERÃO ADICIONADOS AQUI-->
            </ol>
        </section>
    </div>
    <div>
        <h1>
            Projetos de: 
        </h1>

        <figure>
            <blockquote>
                "{{userProfile.name}}"
            </blockquote>
        </figure>

        <a href="/project/add">Adicionar Projeto</a>
    </div>

    <div class="container">
        {{#each userProjects}}
            <li class="project-inline">
                <a href="/project/{{this.id}}">
                    <div>
                        Destino: {{this.destination}} Status: {{this.status}}
                    </div>
                </a>
                <div>
                    <a href="/project/update/{{this.id}}">Editar</a>
                    <form action="/project/remove" method="post">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <input type="submit" value="Excluir" class="btn">
                    </form>
                <div>
            </li>
        {{/each}}
    </div>

</main>
<script id="projeto-template" type="text/x-handlebars-template">{{>project}}</script>
<script id="passo-template" type="text/x-handlebars-template">{{>item}}</script>